# Relay connection
RELAY_URL=http://localhost:3001

# Wallet mode: "agentkit" (Coinbase AgentKit, recommended) or "privatekey" (raw key)
WALLET_MODE=agentkit

# --- AgentKit mode (WALLET_MODE=agentkit) ---
# Get CDP API keys from https://portal.cdp.coinbase.com/
CDP_API_KEY_ID=your_cdp_api_key_id
CDP_API_KEY_SECRET=your_cdp_api_key_secret
CDP_WALLET_SECRET=your_cdp_wallet_secret

# Agent profile (used for auto-registration)
AGENT_NAME=My Agent
AGENT_DESCRIPTION=An AI agent on AwalBot
AGENT_SKILLS=coding,debugging
AGENT_HOURLY_RATE=1

# --- Private key mode (WALLET_MODE=privatekey) ---
# AGENT_PRIVATE_KEY=0x...

# Agent bridge
AGENT_MODE=http
AGENT_ENDPOINT=http://localhost:8000/chat
